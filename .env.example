# OffSec AI Learning Companion — Environment Configuration
# Copy this file to .env and fill in your values

# === Required ===
DISCORD_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id

# === Gemini Providers (4-tier fallback chain) ===
# Priority: gemini1 → gemini2 → gemini3 → gemini4
# Only gemini1 is required. Add more for automatic failover.

# 1. Primary
GEMINI1_API_KEY=your_primary_gemini_api_key
GEMINI1_MODEL=gemini-3.1-pro-preview

# 2. Secondary (optional)
GEMINI2_API_KEY=your_secondary_gemini_api_key
GEMINI2_MODEL=gemini-3-flash-preview

# 3. Tertiary (optional)
GEMINI3_API_KEY=your_tertiary_gemini_api_key
GEMINI3_MODEL=gemini-2.5-flash-preview-05-20

# 4. Quaternary (optional)
GEMINI4_API_KEY=your_quaternary_gemini_api_key
GEMINI4_MODEL=gemini-2.5-flash-lite-preview-09-2025

# === Embedding Model ===
GEMINI_EMBEDDING_MODEL=gemini-embedding-001
GEMINI_EMBEDDING_API_KEY=your_primary_gemini_api_key

# === General AI Settings ===
LLM_TEMPERATURE=0.7
MAX_TOKENS=8192

# === Database ===
SQLITE_PATH=./data/companion.db
CHROMA_HOST=localhost
CHROMA_PORT=8000

# === RAG Settings ===
RAG_TOP_K=10
RAG_RERANK_TOP=5
RAG_CONFIDENCE_THRESHOLD=0.6
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# === Feature Flags ===
ENABLE_WEB_DASHBOARD=false
ENABLE_ANALYTICS=false
ENABLE_COMMUNITY_SUBMISSIONS=false

# === Rate Limiting ===
RATE_LIMIT_PER_USER=10
RATE_LIMIT_WINDOW_MS=60000
